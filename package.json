  "devDependencies": {
    "@testing-library/cypress": "^10.0.2",
    "@types/react": "^18.3.3",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cypress": "^13.13.1",
    "nodemon": "^3.1.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.25.1",
    "typescript": "^5.5.3",
    "vitest": "^2.0.3",
    "wait-on": "^7.2.0"
  }
}
